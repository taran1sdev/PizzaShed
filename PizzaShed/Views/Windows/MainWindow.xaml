<!-- This is the Applications Main Window where pages will be rendered
     The app is designed for a 1024x768 resolution touch screen 
     The height has been increased by 30px to hide the title bar -->
<Window x:Class="PizzaShed.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaShed"
        xmlns:vm="clr-namespace:PizzaShed.ViewModels"   
        xmlns:pages="clr-namespace:PizzaShed.Views.Pages"
        xmlns:windows="clr-namespace:PizzaShed.Views.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow"         
        Height="798" 
        Width="1024" 
        FontFamily="{materialDesign:RobotoFont}"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}"
        >

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <pages:LoginView/>
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
</Window>
