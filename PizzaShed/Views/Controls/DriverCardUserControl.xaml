<UserControl x:Class="PizzaShed.Views.Controls.DriverCardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:PizzaShed.Model"
             d:DataContext="{d:DesignInstance Type=model:Order}"
             mc:Ignorable="d"  
             d:DesignHeight="400" d:DesignWidth="320">

    <Border BorderBrush="{DynamicResource MaterialDesignLightSeparatorBackground}"
            BorderThickness="2" 
            CornerRadius="8" 
            Background="{DynamicResource MaterialDesignDarkSeparatorBackground}"
            Margin="10"             
            Width="300" 
            Height="270">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">

                <TextBlock Text="{Binding ID, StringFormat='Order #{0:0000}'}" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="AntiqueWhite"/>

            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0" >

                    <TextBlock Text="{Binding Path=Customer.Name}" 
                                           FontSize="16"                                                                                      
                                           Foreground="AntiqueWhite"/>

                    <TextBlock FontSize="16"
                                           Foreground="AntiqueWhite"
                                           Text="{Binding Customer.PhoneNumber}" />
                    <Separator />

                    <TextBlock FontSize="16"
                                           Foreground="AntiqueWhite">                                    
                                    <Run Text="{Binding Customer.HouseTicket, Mode=OneWay}" />
                        <Run Text="{Binding Customer.StreetAddress}" />
                    </TextBlock>
                    
                    <TextBlock FontSize="16"
                                           Foreground="AntiqueWhite"
                                           Text="{Binding Path=Customer.Postcode}" />
                    <Separator />

                    <TextBlock FontSize="16"
                                           Foreground="AntiqueWhite"
                                           TextWrapping="Wrap"
                                           Text="{Binding Path=Customer.DeliveryNotes}"/>
                </StackPanel>

            </ScrollViewer>

            <Button Grid.Row="2"                    
                    HorizontalAlignment="Stretch"
                    Margin="0"
                    Height="45"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    Command="{Binding DataContext.CompleteOrderCommand, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                    CommandParameter="{Binding ID}">

                <TextBlock Text="Confirm" FontSize="20"/>
            </Button>

        </Grid>
    </Border>
</UserControl>