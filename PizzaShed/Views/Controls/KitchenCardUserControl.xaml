<UserControl x:Class="PizzaShed.Views.Controls.KitchenCardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PizzaShed.ViewModels" 
             xmlns:model="clr-namespace:PizzaShed.Model" 
             d:DataContext="{d:DesignInstance Type=model:Order}"
             mc:Ignorable="d"  
            d:DesignHeight="270" 
             d:DesignWidth="300">

    <Border BorderBrush="{DynamicResource MaterialDesignLightSeparatorBackground}"
            BorderThickness="2" 
            CornerRadius="8" 
            Background="{DynamicResource MaterialDesignDarkSeparatorBackground}"
            Margin="10"             
            Width="300" 
            Height="270">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">

                <TextBlock Text="{Binding ID, StringFormat='Order #{0:0000}'}" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="AntiqueWhite"/>

            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">

                <ItemsControl ItemsSource="{Binding OrderProducts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5,0,5" >

                                <TextBlock Text="{Binding TicketName}" 
                                           FontSize="18"                                            
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>

            <Button Grid.Row="2"                    
                    HorizontalAlignment="Stretch"
                    Margin="0,10"
                    Height="45"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    >

                <TextBlock Text="Start Order" FontSize="20"/>
            </Button>

        </Grid>
    </Border>
</UserControl>