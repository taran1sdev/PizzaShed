<UserControl x:Class="PizzaShed.Views.Controls.CashierCardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PizzaShed.ViewModels"             
             mc:Ignorable="d"  
            d:DesignHeight="400" d:DesignWidth="300">

    <Border BorderBrush="{DynamicResource MaterialDesignDarkForeground}"
            BorderThickness="2" 
            CornerRadius="8" 
            Background="{DynamicResource MaterialDesignDarkSeparatorBackground}"
            Margin="10" 
            Padding="10"
            Width="300" 
            Height="400">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">

                <TextBlock Text="{Binding ID, StringFormat='Order # {0:0000}'}" 
                           FontSize="36" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="{DynamicResource MaterialDesignDarkSeparatorBackground}"/>
                <TextBlock Text="{Binding CollectionTime, StringFormat='Order # {0000}'}" 
                           FontSize="36" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesignDarkSeparatorBackground}"/>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>