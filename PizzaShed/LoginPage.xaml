<Page x:Class="PizzaShed.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzaShed"
      mc:Ignorable="d" 
      d:DesignHeight="768" 
      d:DesignWidth="1024"
      Title="LoginPage"
      >
    
    <!-- We create default styles for the items on this page -->
    <Page.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Height" Value="70" />
                <Setter Property="Width" Value="90" />
                <Setter Property="Margin" Value="110,10" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontFamily" Value="Arial" />
                
                <Style.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Style.Resources>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Page.Content>
        <Grid>
            <!-- Create rows to create page layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="171"></RowDefinition>
                <RowDefinition Height="171"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="171"></RowDefinition>
            </Grid.RowDefinitions>
            <!-- Create columns to create page layout -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="256"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="40"
                FontWeight="DemiBold"
                Text="Pizza Shed"
                FontFamily="Corbel"                
             ></TextBlock>

            <!-- Text Box to display PIN input to user -->
            <TextBox                
                TextAlignment="Center"                
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="30"
                FontFamily="Corbel"
                Height="60"
                Width="240"                
                Text="****" 
                Padding="0,15,0,0"/>
              
            <Button 
                x:Name="One" 
                Content="1" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Grid.Row="2"
                Grid.Column="1"                                
                ></Button>
            <Button 
                x:Name="Two" 
                Content="2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Grid.Row="2"    
                Grid.Column="1"                              
                ></Button>
            <Button 
                x:Name="Three" 
                Content="3" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Grid.Row="2"    
                Grid.Column="1"                              
                ></Button>
            <Button 
                x:Name="Four" 
                Content="4" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                Grid.Row="2"    
                Grid.Column="1"                              
                ></Button>
            <Button 
                x:Name="Five" 
                Content="5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Grid.Row="2"    
                Grid.Column="1"                              
                ></Button>
            <Button
                x:Name="Six"
                Content="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Grid.Row="2"
                Grid.Column="1"
                ></Button>
            <Button 
                x:Name="Seven" 
                Content="7"     
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom"
                Grid.Row="2"    
                Grid.Column="1"                              
                ></Button>
            <Button 
                x:Name="Eight" 
                Content="8" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Grid.Row="2"    
                Grid.Column="1"                              
                ></Button>
            <Button 
                x:Name="Nine" 
                Content="9" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Grid.Row="2"    
                Grid.Column="1"                              
            ></Button>
            <Button
                x:Name="Zero"
                Content="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0"
                ></Button>
        </Grid>
    </Page.Content>
</Page>
